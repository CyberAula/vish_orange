
<article class="contest_block">
  <div class="intro">
    <h1><%= t('contest_page.presentation.intro') %></h1>
    <div class="horizontal_line"></div>
  </div>

  <div class="content_block">
    <div class="video_block">
      <%if raw t(' == 1 %>
      <!-- video presentation -->
        <iframe class="video_presentation" width="480" height="250" src="https://www.youtube.com/embed/BVL2bDBRPLs?rel=0" frameborder="0" allowfullscreen></iframe>
      <%end%>
      <%if raw t(' == 2 %>
      <!-- videotutorial -->
        <iframe class="video_presentation" width="480" height="250" src="https://www.youtube.com/embed/QRlKdO3sDbA?rel=0" frameborder="0" allowfullscreen></iframe>
      <%end%>
    </div>
    <div class="text_block">
      <h2><%= t('contest_page.presentation.title') %></h2>
      <p class="p_block">
        <%= t('contest_page.presentation.text') %>
      </p>
      <a class="btn btn-secondary" href="/pdf/BasesConcurso2017.pdf" download="BasesConcurso2017"> <%= t('contest_page.presentation.action1') %></a>
      <%if isUserEnrolled? %>
        <div></div>
      <% elsif user_signed_in? %>
        <button class="btn btn-contest" onclick="location.href='/contest/educa2017/other_fields_enrollment';">
          <%= t('contest_page.main_title.action1') %>
        </button>
      <% else %>
        <button class="btn btn-contest" onclick="location.href='/contest/educa2017/full_enrollment_registration';">
          <%= t('contest_page.main_title.action1') %>
        </button>
      <% end %>
    </div>
  </div>
</article>
