<article class="contest_block">
  <div class="intro">
    <h1><%= t('contest_page.winners.intro') %></h1>
    <div class="horizontal_line"></div>
  </div>

  <div class="content_block">
    <div class="items">
      <% begin
        win1, win2, win3, win4 = [Link.find(293), Document.find(9229), Document.find(9218), Document.find(9228)]
      rescue ActiveRecord::RecordNotFound => e
        win1, win2, win3, win4 = Document.all.sample(4)
      end %>
      <%= render partial: 'repositories/resource', locals: { resource: win1 } %>
      <%= render partial: 'repositories/resource', locals: { resource: win2 } %>
      <%= render partial: 'repositories/resource', locals: { resource: win3 } %>
      <%= render partial: 'repositories/resource', locals: { resource: win4 } %>
      <div class="clear"></div>
    </div>
    <div class="flex">
      <div class="item_extra_text">
        <%= t('contest_page.help_center.winners.win1_text_html')%>
      </div>
      <div class="item_extra_text">
        <%= t('contest_page.help_center.winners.win2_text_html')%>
      </div>
      <div class="item_extra_text">
        <%= t('contest_page.help_center.winners.win3_text_html')%>
      </div>
      <div class="item_extra_text">
        <%= t('contest_page.help_center.winners.win4_text_html')%>
      </div>
    </div>
    <br><br><br><br>
  </div>
</article>

