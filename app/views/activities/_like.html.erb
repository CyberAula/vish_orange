<article class="to_like like_<%= dom_id(activity) %>">
  <%= link_to [ activity, :like ], remote: true, method: ( like_status(activity).first == 'like' ? :post : :delete ) do %>
    <% if like_status(activity).last === 'like' %>
	  <i class="fa fa-star"></i>
	<% else %>
	  <i class="fa fa-star-o"></i>
	<% end %>

  <% end %>
</article>
