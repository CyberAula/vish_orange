<section id="messages-toolbar">

    <ul class="nav nav-tabs">   
      
      <li class="<%= 'active' if controller.action_name == 'new' %>">
        <%= link_to new_message_path do %>
          <i class='fa fa-edit '></i> 
          <span class="hidden-xs hidden-sm">
            <%= t('message.new') %>
          </span>
        <% end %>
      </li>

      <li class=" <%= 'active' if params[:box] == 'inbox' %>">
        <%= link_to conversations_path(box: :inbox) do %>
            <i class='fa fa-inbox'></i> 
            <span class="hidden-xs hidden-sm">
              <%= t('message.inbox') %> (<%= current_subject.unread_messages_count %>)
            </span>
        <% end %>
      </li>
      
      <li class="<%= 'active' if params[:box] == 'sentbox' %>">
        <%= link_to conversations_path(box: :sentbox) do %>
            <i class='fa fa-sign-out fa-rotate-270 '></i> 
            <span class="hidden-xs hidden-sm">
              <%= t('message.sentbox') %>
            </span>
        <% end %>
      </li>

      <li class="<%= 'active' if params[:box] == 'trash' %>">
        <%= link_to conversations_path(box: :trash) do %>
            <i class='fa fa-trash-o '></i> 
            <span class="hidden-xs hidden-sm">
              <%= t('message.trash') %>
            </span>
        <% end %>
      </li>

    </ul>
</section>