<li class="box-item categorie-item" <% if defined?(obj_id)%>edit-id="<%=obj_id%>"<% end %>>
  <%= link_to(psg) do %>
    <!-- corner -->
    <div class="corner-item">
      <div class="corner-item2">
        <div class="corner-color"></div>
        <i class="fa fa-group"></i>
      </div>
      <div class="corner-background"></div>
    </div>

    <div class="container-img">
      <div class="element">
        <div class="img-box">
          <div class="category">
            <div class="img-box"><i class="fa fa-group"></i></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="caption">
    <!--Title -->
    <h6>
      <%= link_to psg.name, psg %>
    </h6>
    <!--Author -->
    <div class="author">
      <span class="by"><%=t('by')%></span>
      <%= link_to psg.private_teacher.name, psg.private_teacher.subject %>
    </div>
    <hr>

    <div class="info-bottom">
      <!--like -->
      <div class="categories_inside">
        <%= psg.private_students.length.to_s %>
        <%= t('private_student.items_inside') %>
      </div>
    </div>
  </div>

</li>
