

<li class="">

  <div class="course_large">

    <%= link_to(course) do %>
    <div class="course_large_image">
      <div class="course_large_icon">
        <img class="courses_corner" src="assets/orange/corner_course_icon.png" alt="corner_icon"/>
      </div>
      <%if course.accredited%>
      <div class="course_large_accreditation">
        <img class="courses_accreditation" src="<%=course.accredited_logo%>" alt="<%=course.accredited_text%>"/>
      </div>
      <%end%>
      <div class="course_large_img">
        <div class="img-box-large" style="background-image: url('<%=course_raw_thumbail(course)%>')">
        </div>
      </div>
    </div>
    <% end %>


    <div class="course_large_info">
      <!--Title -->
      <p class="course_large_title">
        <%= link_to truncate(course.title, :length => 73), course %>
      </p>
      <p class="course_large_title_mob">
        <%= link_to truncate(course.title, :length => 65), course %>
      </p>
      <!--Duration -->
      <p class="course_large_duration">
        <span><%= t('courses_page.duration')%></span> <%=course.duration_text%>
      </p>
      <!--Course type -->
      <p class="course_learning_format">
        <%if course.self_learning_format%>
          <%= t('courses_page.open')%>
        <%elsif course.start_date%>
          <span><%= t('courses_page.start')%></span> <%=course.start_date.strftime('%d-%m-%Y')%>
        <%else%>
          <span><%= t('courses_page.start_soon')%></span>
        <%end%>
      </p>
      <!--Description -->
        <p class="course_large_description">
          <%= link_to truncate(course.description, :length => 139), course%>
        </p>
    </div>

  </div>

</li>
