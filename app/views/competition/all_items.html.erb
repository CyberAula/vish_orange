<% content_for :banner do %>
  <%=render :partial => "search/main_title", :locals => { :main_title_body => t('competition.menu.joined') }%>
<%end%>

<div id="joined_resources_all" class="row">
	<ul class="items">
		<% if current_subject != nil && current_subject.actor.joined_competition != true %>
			<%= render :partial => 'competition/item_add_proposal' %>
		<% end %>
		<%=render :partial => "all_items"%>
	</ul>
</div>

<div class="loader_pagination" style="display:none">
  <div class="pageless-loader" style="text-align:center;width:100%;">
    <div class="msg" >
      <%=t('search.loading')%>
    </div>
    <%= render :partial => "layouts/loading" %>
  </div>
</div>


<script type="text/javascript">
document.addEventListener("DOMContentLoaded", function(){
	$("#joined_resources_all ul.items").pageless({
      totalPages: <%=@competition_items.num_pages%>,
      url: "/competition/all",
      currentPage: <%=@competition_items.current_page%>,
      loader: '.loader_pagination',
      end: function(){
        $('.loader_pagination').hide();
      }
    });
});
</script>