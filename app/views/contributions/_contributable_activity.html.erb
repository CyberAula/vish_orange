<div class="contributions_actions">
	<div class="contributions_content">
	  <h4> Contribute </h4>
	  <%= render partial: "contributions/submit_contributions", locals:  { :contribution => contribution } %>

	  <% contributionsGallery = contribution.contributions %>
	  <% unless contributionsGallery.blank? %>
	    <h4> Contributions Gallery </h4>
	    <%= render partial: "contributions/contributions_gallery", locals:  { :contributions => contributionsGallery } %>
	  <% end %>
	</div>
</div>