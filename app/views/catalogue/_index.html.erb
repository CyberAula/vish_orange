<% show_title ||= false %>
<% is_home ||= false%>
<% is_temateca ||= (params[:temateca]=="true")%>

<div class="header_catalogue">
	<%if show_title%>
		<h1>
			<% if params[:controller] == 'catalogue' && params[:temateca] == 'true' %>
				<%= t('orange_front.header.temateca')%><strong><%=t('orange_front.header.bold')%></strong>
			<% else %>
			<%= t('orange_front.header.recursoteca')%><strong><%=t('orange_front.header.bold')%></strong>
			<% end %>
		</h1>
		<hr>
	<%end%>
	<%= render :partial => "catalogue/tags", :locals =>{ :is_home => is_home, :is_temateca => is_temateca } %>
</div>

<%= render :partial => "catalogue/main", :locals =>{ :is_home=> is_home, :is_temateca => is_temateca } %>
