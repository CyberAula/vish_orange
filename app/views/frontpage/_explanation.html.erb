
<div class="main-box">
  <img src="assets/orange/home.jpg" alt="cover_image">
  <!-- center sentence + buttons -->
  <div class="main-title">
    <div class="title">
      <h1><%= t('orange_front.main_message')%></h1>
      <h2><%= t('orange_front.second_message')%></h2>
    </div>
    <button href="/search" class="btn btn-secondary btn-main-title">
     <%= t('orange_front.carousel.title2')%>
   </button>
  </div>
</div>

<div class="entities">
  <%= render partial: 'frontpage/menu_blocks'%>
</div>

<% content_for :javascript do %>
  $('#close_banner').click(function(){
    $("#banner").remove();
  });
  $("#banner").show("slide", { direction: "right", easing: "easeOutQuart" }, 1000);
<% end %>
