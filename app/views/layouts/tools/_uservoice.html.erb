<% if Vish::Application.config.uservoice %>
  <script type="text/javascript">
    var uvOptions = {};
    (function(){
      var uv = document.createElement('script');
      uv.type = 'text/javascript';
      uv.async = true;
      uv.src = '<%=Vish::Application.config.APP_CONFIG["uservoice"]["scriptURL"]%>';
      var s = document.getElementsByTagName('head')[0]; 
      s.appendChild(uv);
    })();
  </script>
<% end %>

