        <ul class="nav navbar-nav navbar-right">
          <li class="active"><a href="/"><%=t('orange_front.header.index')%></a></li>
          <li><a href="/catalogue?temateca=true"><%=t('orange_front.header.temateca')%><strong><%=t('orange_front.header.bold')%></strong></a></li>
          <li><a href="/catalogue"><%=t('orange_front.header.recursoteca')%><strong><%=t('orange_front.header.bold')%></strong></a></li>
