<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <!-- BRAND -->
      <div class="brand">
        <%#= link_to "EducaInternet",'/', class: "logo"  %>
        <a href="/" class="logo">Educa<strong>Internet</strong></a>
        <%#= link_to(image_tag('logo/brand.png', :alt => t('site.name')), '/', :class => "logo"); %>
      </div>

      <!-- BROWSE -->
      <!--<div class="toggler browse">
        <%= render partial: 'layouts/browse_header'%>
      </div>-->

      <!--______________________________desktop-->
      <div class=" hidden-phone hidden-tablet">

        <!-- NEW ORANGE MENU -->

        <ul class="nav navbar-nav navbar-right">
          <li class="<%= 'active' if params[:controller] == 'frontpage' %>"><a href="/"><%=t('orange_front.header.index')%></a></li>
          <li class="<%= 'active' if params[:temateca] == 'true' && params[:controller] == 'catalogue'%>"><a href="/catalogue?temateca=true"><%=t('orange_front.header.temateca')%><strong><%=t('orange_front.header.bold')%></strong></a></li>
          <li class="<%= 'active' if params[:temateca].blank? && params[:controller] == 'catalogue'%>"><a href="/catalogue"><%=t('orange_front.header.recursoteca')%><strong><%=t('orange_front.header.bold')%></strong></a></li>
          <li class="<%= 'active' if params[:controller] == 'search' && params[:browse]=="true" && params[:type]=="user" %>"><a href="<%=search_path(:type => "user", :browse=>"true", :sort_by => "popularity")%>"><%=t('orange_front.header.comunity')%></a></li>
          <li><a href="<%=new_user_registration_path%>"><%=t("sign_up")%></a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><strong>Acceso<i class="icon-angle-down"></i></strong></a>
            <ul class="dropdown-menu pull-right" role="menu">
              <%= form_for User.new, :as => :user, :url => user_session_path do |f| %>
                <%= f.email_field :email, :id => "username" %>
                <%= f.password_field :password, :id => "password"  %>

                <label class="checkbox">
                  <input type="checkbox"> <%=t("activerecord.attributes.user.remember_me")%>
                </label>
                <%= link_to t('devise.links.forgot_password'), new_password_path(:user) %>
                <%= f.submit t(:sign_in), :class => ' btn btn-primary pull-right'%>
              <% end %>

              <%content_for :javascript do%>
                if ("placeholder" in document.createElement("input")) {
                  $("#username").attr('placeholder', I18n.t('activerecord.attributes.user.email'));
                  $("#password").attr('placeholder', I18n.t('activerecord.attributes.user.password'));
                } else {
                  $("#username").watermark(I18n.t('activerecord.attributes.user.email'),"#666");
                  $("#password").watermark(I18n.t('activerecord.attributes.user.password'),"#666");
                }
              <% end %>
            </ul>
          </li>
        </ul>

        <!--search-->

        <li class="search-ui ">
          <%= render partial: 'layouts/uisearch_header' %>
        </li>
      </div>


<!--________________________mobile/tablet-->
      <div class="nav-collapse navbar-responsive-collapse collapse hidden-desktop  MOBILE ">
        <%= render partial: 'layouts/header_signed_out_mobile' %>
      </div>


    </div>
  </div>

</header>
