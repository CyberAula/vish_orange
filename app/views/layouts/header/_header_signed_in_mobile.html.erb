<% availableModels = available_models %>
<ul class="nav navbar-nav mobile-nav">

  <%if false%>
    <li class="btn btn-primary">
      <a class="linker" href="<%=@course.url%>"><%=t('mooc.button.go_to_mooc')%></a>
    </li>
  <%end%>

  <!--search-->
  <li class="search-ui">
    <%= render partial: 'layouts/search_mobile' %>
  </li>

  <!--user-->
  <li class="user">
    <%= link_to current_subject do %>
      <%= image_tag current_subject.logo.url(:small) %>
      <span class="user_name"><%= truncate_name(current_subject.name, length: 20) %></span>
    <% end %>
  </li>

  <!-- dropdown menu links -->
  <li class="add">
    <a href="<%=new_document_path%>">
      <i class="fa fa-plus"></i>
      <%= t('header-mobile.add') %>
    </a>
  </li>

  <!--courses-->
  <%if (availableModels.include? "Course") %>
    <li class="">
      <%= link_to "/users/"+current_subject.slug+"/courses" do %>
          <i class=""></i>
          <span><%= t('course.my') %></span>
      <% end %>
    </li>
  <%end%>

  <!--profile-->
  <li class="settings-menu">
    <%= link_to settings_path do %>
    <i class=""></i>
    <%= t('header-mobile.settings') %>
    <% end %>
  </li>

  <li>
    <a href="/">
      <i class=""></i>
      <%= t('orange_front.header.index') %>
    </a>
  </li>

  <li>
    <a href="/explore">
      <i class=""></i>
      <%= t('orange_front.header.explore') %>
    </a>
  </li>

  <li>
    <a href="/search">
      <i class=""></i>
      <%= t('orange_front.header.repo') %>
    </a>
  </li>


  <li>
    <a href="/courses">
      <i class=""></i>
      <%= t('orange_front.header.courses') %>
    </a>
  </li>


  <li>
    <a href="/about">
      <i class=""></i>
      <%= t('orange_front.header.about') %>
    </a>
  </li>

  <!--legal_notice-->
  <li>
    <a href="/legal_notice">
      <i class=""></i>
      <%= t('header-mobile.terms') %>
    </a>
  </li>

  <!--manual-->
  <li>
    <%= link_to faq_path do %>
      <i class=""> </i> <%=t('header-mobile.help')%>
    <% end %>
  </li>

  <hr>
  <!--sign out-->
  <li class="sign-out">
    <%= link_to destroy_user_session_path, :method => :delete do %>
    <i class="fa fa-sign-out"></i>
    <%= t('header-mobile.sign-out') %>
    <% end %>
  </li>
