<section class="quick-search">

  <div class="search-nav">
    <%= form_tag search_path, method: 'get', class: "navbar-search form-group" do %>
      <%= text_field_tag :q, nil, autocomplete: :off, class: 'search-query form-control', placeholder: t('search.name'), "data-min_query" => SocialStream::Search::MIN_QUERY %>
      <button type="button" id="search_button_desktop" class="search_button_class btn btn-default"><i class="fa fa-search mini-search"></i></button>
    <% end %>
    
    <div class="mat">
      <%= render partial: 'layouts/loading' %>

      <div class="query_too_short">
        <%= t 'search.at_least', count: SocialStream::Search::MIN_QUERY %>
      </div>

      <div class="no_results">
        <%= t 'search.nothing' %>
      </div>

      <div class="results">
      </div>
    </div>
  </div>

  <%= content_for :javascript do %>
      $(".mat").show();
      SocialStream.SearchHeader.show();
      $("#search_button_desktop").on("click", function(){
        document.location= "/search?q=" + $("#q").val();
      });
  <% end %>

</section>
