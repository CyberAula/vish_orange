<% availableModels = available_models %>
<% availableServices = available_services %>
<div class ="btn-group">
  <a type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <span><%=t('browse.title')%></span>
    <i class="fa fa-angle-down"></i>
  </a>

  <ul class="dropdown-menu">
    <li>
      <a tabindex="-1" href="<%=search_path(:browse=>"true", :sort_by => "popularity")%>">
        <i class="fa fa-dashboard"></i>
        <%=t('browse.all')%>
      </a>
    </li>

    <li class="divider"></li>

    <% if availableModels.include? "Excursion" %>
      <li>
        <a tabindex="-1" href="<%=search_path(:type => "Excursion", :browse=>"true", :sort_by => "popularity")%>">
          <i class="fa fa-list-alt"></i>
          <%=t('excursion.other')%>
        </a>
      </li>
    <%end%>

    <li>
      <a tabindex="-1" href="<%=search_path(:type => "User", :browse=>"true", :sort_by => "popularity")%>">
        <i class="fa fa-user"></i>
        <%=t('user.other')%>
      </a>
    </li>

    <% if availableModels.include? "Resource" %>
      <li>
        <a tabindex="-1" href="<%=search_path(:type => "Resource", :browse=>"true", :sort_by => "popularity")%>">
          <i class="fa fa-file"></i>
          <%=t('resource.other')%>
        </a>
      </li>
    <%end%>

    <% if availableModels.include? "Workshop" %>
      <li>
        <a tabindex="-1" href="<%=search_path(:type => "Workshop", :browse=>"true", :sort_by => "popularity")%>">
          <i class="fa fa-book"></i>
          <%=t('workshop.other')%>
        </a>
      </li>
    <%end%>

    <% if Vish::Application.config.courses_enabled && Vish::Application.config.courses_count>0 %>
      <li class="divider"></li>
      <li>
        <a tabindex="-1" href="<%=courses_path%>">
          <i class="fa fa-graduation-cap"></i>
          <%=t('course.other')%>
        </a>
      </li>
    <%end%>

    <li class="divider"></li>

    <% if availableServices.include? "Catalogue" %>
      <li>
        <a tabindex="-1" href="<%=search_path(:catalogue => "true")%>">
          <i class="fa fa-tags"></i>
          <%=t('catalogue.title')%>
        </a>
      </li>
    <%end%>

    <% if availableServices.include? "ASearch" %>
      <li>
        <a tabindex="-1" href="/search/advanced">
          <i class="fa fa-search"></i>
          <%=t('asearch.title')%>
        </a>
      </li>
    <%end%>

    <% if availableServices.include? "Contests" %>
      <li class="divider"></li>
      <% Contest.where("show_in_ui='true'").each do |contest| %>
        <li>
          <a tabindex="-1" href="<%=contest.getUrlWithName%>">
            <i class="fa fa-trophy"></i>
            <%=t('contest.templates.' + contest.name + '.title')%>
          </a>
        </li>
      <% end %>
    <%end%>

  </ul>
</div>
