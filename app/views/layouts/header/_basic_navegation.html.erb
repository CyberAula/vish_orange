<%if ["INVITATION_ONLY","HYBRID"].include? Vish::Application.config.APP_CONFIG["register_policy"] and !current_subject.role?("PrivateStudent") %>
	<li>
	  <%= link_to(raw("<i class='fa fa-user-plus'></i> "), new_user_invitation_path, :class => "btn-header tooltip-header clearfix", :title => t("devise.invitations.button"),:remote=> true, :data => {:toggle=>"modal", :target=>"#CreateInvitationModal"}) %>
	</li>
<%end%>
<%if !current_subject.role?("PrivateStudent") %>
	<li>
	  <%= link_to(raw("<i class='" + (current_subject.unread_messages_count > 0 ? " fa fa-envelope notification" : " fa fa-envelope-o") + "'></i> "), messages_path, :class => "tooltip-header clearfix", :type => "button", :title => current_subject.unread_messages_count.to_s + t('message.unread'), :data => {:toggle=>"tooltip"}) %>
	</li>
<%end%>
<%if !current_subject.role?("PrivateStudent") %>
	<li>
	  <%= link_to(raw("<i class='fa fa-globe'></i>"),
	      activities_path,
	      :class => "tooltip-header clearfix",
	      :title => t('activity.other'),
	      :data => {:toggle=>"tooltip"}) %>
	</li>
<%end%>