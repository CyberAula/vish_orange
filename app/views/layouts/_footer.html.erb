        <!-- language -->
        <div class="dropup">
          <button id="dlanguage" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn btn-secondary btn-footer">
            <i class="fa fa-globe" aria-hidden="true"></i>
            <% the_locale = I18n.locale.to_s %>
            <%=t('lang.title')%>
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dlanguage">
            <% for locale in (I18n.available_locales.map{|i| i.to_s}) -%>
             <li class="">
                <%= link_to image_tag("flags/" + locale + ".png", :title=>locale, :class=> "") + " " + t(:language_name, :locale => locale), session_locale_path(:new_locale => locale), :method => :post, :remote => false %>
              </li>
            <% end %>
          </ul>

        </div>
    </section>

    <section class="hide_footer">
      <h4><%= t('orange_front.footer.project')%></h4>
        <ul>
          <li class="footer_link"><a href="/explore"><%=t('orange_front.footer.explore')%></a></li>
