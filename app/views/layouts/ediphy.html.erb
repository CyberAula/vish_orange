<!-- HTML5 DOCTYPE -->
<!DOCTYPE html>
<html lang="<%= I18n.locale.to_s %>" class="tr-coretext tr-aa-subpixel" style="overflow: hidden;">
<head>
  <%= render :partial => "layouts/application_head" %>
</head>

<body style="padding: 0">
  <%= render :partial => "layouts/header/header_warning" %>

  <div class="header_ediphy">
    <div id="hmin" class="header_min"><img src="/assets/orange/educa-logo-mobile.png"></img></div>
    <div id="hcomp" class="header_complete">
      <%= render :partial => "layouts/header/header" %>
      <i id="upIcon" class="fa fa-angle-up fa-lg switchBar"></i>
    </div>
  </div>

  <%= flashy %>
  <%= yield %>
</body>

<%= javascript_include_tag "application" %>
<script type="text/javascript">
  var CKEDITOR_BASEPATH = '/assets/ckeditor/';
  I18n.defaultLocale = "<%= I18n.default_locale %>";
  I18n.locale = "<%= I18n.locale %>";

  var VISH = VISH || {};
  VISH.I18n = VISH.I18n || {};
  VISH.I18n.getLanguage = function(){
    return "<%= I18n.locale.to_s%>";
  };
</script>
<%= javascript_include_tag "ckeditor/ckeditor" %>
<%= yield :javascript_libs %>

<script type="text/javascript">
  $(document).ready(function() {
    <%= render partial: 'shared/hide_popovers' %>
    <%= yield :javascript %>
  });
</script>
<script type="text/javascript">
  $('#hmin').click(function (event) {
    $('#hmin').css('top', '-48px');
    $('#hcomp').css('top', '0');
    $('#upIcon').css('top', '100px');
  });
  //upIcon
  $('#upIcon').click(function (event) {
    $('#hmin').css('top', '0');
    $('#hcomp').css('top', '-100px');
    $('#upIcon').css('top', '0');
  });
</script>
<%= render :partial => 'layouts/tools/google_analytics' %>
<%= render :partial => 'layouts/tools/uservoice' %>

</html>
