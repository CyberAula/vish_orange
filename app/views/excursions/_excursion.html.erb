<div class=" excursion-item col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3" <%if defined?(obj_id)%>edit-id="<%=obj_id%>"<%end%>>
  <%
    generated_id = "excursion-" + excursion.id.to_s
    generated_id = prefix_id + "-" + generated_id if defined?(prefix_id)
    generated_id = "cat-" + obj_id.to_s + "-" + generated_id if defined?(obj_id)
  %>
  <div class="card">
  <%= link_to(excursion_url(excursion)) do %>
    <!-- image/icon -->
    <div class="container-img">
    <img src="<%=excursion_raw_thumbail(excursion)%>" class="card-img-top" alt="..."/>
      <%if excursion.draft && excursion.notified_teacher %>
        <div class="excursion-draft">
          <h2 class="draftstyle">
            <i class="fa fa-bell"></i>
            <%=t('excursion.notified')%>
          </h2>
        </div>
      <%elsif excursion.draft%>
        <div class="excursion-draft">
          <h2 class="draftstyle">
            <i class="fa fa-edit"></i>
            <%=t('excursion.draft')%>
          </h2>
        </div>
      <%end%>
    </div>
  <% end %>
  <div class="card-body caption">
  <h5 class="card-title"><%= link_to excursion.title, excursion %></h5>
  <p class="card-text author">
    <small class="text-muted">
      <span class="by"><%=t('by')%></span>
      <%= link_to excursion.author.name, excursion.author.subject %></p>
    </small>
  </p>
</div>
<div class="card-footer d-flex flex-row justify-content-between">
  <div class="like">
      <% if excursion.post_activity%>
        <div class="count d-inline"><%=excursion.post_activity.likes.count.to_s%></div>
        <%= link_like(excursion.post_activity, :title =>t('excursion.actions.favorite'))%>
      <%else%>
        <div class="count">0</div>
      <%end%>
      </div>
        <div class="views">
        <%if is_contest? && contest_phase==3%>
          <div class="fb-like" data-href="<%= url_for(excursion) %>" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false"></div>
        <%else%>
          <%=excursion.visit_count.to_s%>
          <i class="fa fa-eye"></i>
        <%end%>
        </div>

  </div>
</div>
</div>
