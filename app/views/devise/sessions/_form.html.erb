<section id="sign_in">
  <h3><%= t('sign_in') %></h3>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= devise_error_messages! if controller.controller_name == 'sessions' %>

    <article class="login_data">

      <%= f.label :email %>

      <%= f.email_field :email %>

      <%= f.label :password %>

      <%= f.password_field :password %>

      <% if devise_mapping.rememberable? -%>
        <div id="remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <%= link_to t('devise.links.forgot_password'), new_password_path(resource_name),  :class=> "forgot-link" %>

      <!--<hr class="soften">-->
      <%= f.submit t('sign_in'), :class =>"btn" %>
      <a class="sign_up btn" href="<%=new_user_registration_path%>"><%=t("sign_up")%></a>

      <%= render :partial => "devise/shared/links" %>


    </article>
  <% end %>
</section>
