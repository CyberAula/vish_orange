<%content_for :title do%><%= t('site.meta_title.learn') %><%end%>
<%content_for :keywords do%><%= t('site.meta_keywords.learn') %><%end%>
<%content_for :description do%><%= t('site.meta_desc.learn')%><%end%>
<%content_for :alternate_urls do%><%=raw alternate_urls(request.original_url, nil)%><%end%>

<% content_for :banner do %>
