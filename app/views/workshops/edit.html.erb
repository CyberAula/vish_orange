        <li><a href="#tab_assignment" data-toggle="tab" activityId="assignment"><i class="icon-list-ol"></i><span class='hidden-tablet hidden-phone'><%=t('workshop.activities.assignment.title')%></span></a></li>
        <li class="active"><a href="#tab_resource" data-toggle="tab" activityId="resource"><i class="icon-file"></i><span class='hidden-tablet hidden-phone'><%=t('workshop.activities.resource.title')%></span></a></li>
